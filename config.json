{
    "host": "0.0.0.0",
    "port": 4400,
    "ssl": {
        "enabled": false,
        "ca": "/home/ssl/ca.crt",
        "key": "/home/ssl/foo.key",
        "cert": "/home/ssl/foo.crt"
    },
    "genericCRUD": true,
    "databases": [
        {
            "name": "brawlers",
            "type": "pg",
            "host": "localhost",
            "database": "playground",
            "user": "turtlekitty",
            "password": "",
            "queries": {
                "listBrawlers": "select name, brawn, brains, moves, cool, karma from brawler",
                "getBrawler": "select * from brawler where id = ?",
                "getBrawlerPowers": "select b.name as brawler, p.name, p.type, p.rank from brawler b inner join power p on (b.id = p.brawler_id) where b.id = ?",
                "getBrawlerGear": "select b.name as brawler, g.name from brawler b inner join brawler_gear bg on (b.id = bg.brawler_id) inner join gear g on (bg.gear_id = g.id) where b.id = ?",
                "getBrawlerWhere": "select * from brawler where brawn >= ?",
                "getBrawlerAndPowers": "select name, brawn, brains, moves, cool, karma, (select name, type, rank from power where brawler_id = brawler.id) as powers from brawler",
                "getXfromYwhereZisQ": "select $x from $y where $z = '$q'"
            }
        },
        {
            "name": "foo",
            "type": "mysql",
            "host": "localhost",
            "database": "foobarbaz",
            "user": "turtlekitty",
            "password": "",
            "queries": {
                "descTable": "desc $table",
                "getFoo": "select * from foo where id = ?",
                "getFooBars": "select bar.id, bar.rank from foo inner join bar on (foo.id = bar.foo_id) where foo.id = ?",
                "getStuff": "select * from $relation where $field = ?"
            }
        }
    ],
    "externalServices": [
        {
            "name": "WorldBank",
            "baseURI": "http://api.worldbank.org/countries",
            "routes": [
                {
                    "method": "get",
                    "localpath": "/countrydata/$country/$fromYear/$toYear",
                    "path": "/{{ country }}/indicators/NY.GDP.PCAP.CD?format=json&date={{ fromYear }}:{{ toYear }}"
                }
            ]
        }
    ],
    "plugins": {
        "salesforce": {
            "queries": {
                "accounts": "select id, name from account",
                "fromwhat": "select * from $what"
            }
        }
    }
}


